@model ProductViewModel

@{
    ViewBag.Title = "Butik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header page-heading">
    <h2 class="pull-left">Butik</h2>
    <div class="clearfix"></div>
</div>

<!-- Page Content -->
   @* <div class="container">*@
<div class="row">
    <div class="col-md-3">
        <div class="list-group">
            <a href="#" class="list-group-item">Category 1</a>
            <a href="#" class="list-group-item">Category 2</a>
            <a href="#" class="list-group-item">Category 3</a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row carousel-holder">
            <div class="col-md-12">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="item active">
                            <img class="slide-image" src="/Images/kontakt.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="slide-image" src="/Images/hvede.jpg" alt="">
                        </div>
                        <div class="item">
                            <img class="slide-image" src="/Images/æblertrorjeg.jpg" alt="">
                        </div>
                    </div>
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>
        <br/>
        @foreach (var item in Model.AllFiles)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.Content)" />
                    <div class="caption">
                        <h4 class="pull-right">@Html.DisplayFor(modelItem => item.Products.ProductPrice)Kr</h4>
                        <h4>
                            @Html.ActionLink(item.Products.ProductName, "Details", new {id=item.ProductId})
                        </h4>
                        <p>
                            @Html.DisplayFor(modelItem => item.Products.ProductDesc)
                        </p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                        @if(User.IsInRole("Security"))
                        { 
                        @Html.ActionLink("Delete","DeleteProduct", new { id=item.ProductId})
                            <a>|</a>
                        @Html.ActionLink("Edit", "EditProduct", new { id = item.ProductId })
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
    <script src="js/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>